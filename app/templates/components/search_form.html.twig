{% trans_default_domain 'Application' %}

{{ form_start(form) }}

<div class="form-row">
    <div class="col-5">
        {{ form_widget(form.country, {'attr': {'class': 'form-control', 'placeholder': 'search.form.province'|trans}}) }}
    </div>

    <div class="col-5">
        {{ form_widget(form.city, {'attr': {'class': 'form-control','placeholder': 'search.form.city'|trans}}) }}
    </div>

    <div class="col-2">
        {{ form_widget(form.search, {'label': 'search.form.search' | trans, 'attr': {'class': 'btn btn-primary float-right'}}) }}
    </div>
</div>

{{ form_end(form) }}
